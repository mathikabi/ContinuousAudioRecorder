<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bt_state</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/audio_recorder</item>
    </style>
    <style name="TextViewStartTime">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center|right|end</item>
        <item name="android:text">@string/start_end_time</item>
    </style>
    <style name="TextViewEndTime">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center|left|start</item>
        <item name="android:text">@string/start_end_time</item>
    </style>
    <style name="SeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>